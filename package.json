{
  "name": "alchemist-sketches",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @alchemist/web",
    "build": "npm run build -w @alchemist/shared && npm run build -w @alchemist/theta-sketch && npm run build -w @alchemist/web",
    "lint": "eslint .",
    "preview": "npm run preview -w @alchemist/web",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d apps/web/dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {
    "gsap": "^3.14.2",
    "obelus": "^0.0.14",
    "obelus-gsap-animator": "^0.0.1",
    "obelus-three-render": "^0.0.5"
  }
}
